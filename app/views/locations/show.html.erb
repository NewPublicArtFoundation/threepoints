<div class="large-12 hero-image-slice" style="background-image: url('<%= @heroImage %>'); ">
</div>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="large-6 column">
    <p>
      <h1>
        <%= @location.name %>
      </h1>
    </p>
    <% if @location.description != nil %>
    <p>
      <%= @location.description %>
    </p>
    <% end %>
    <% if @location.instagram_url %>
      <%= link_to @location.instagram_url,'Instagram', :class=>'button secondary small' %>
    <% end %>
    <% if @location.facebook_url %>
      <%= link_to @location.facebook_url,'Facebook', :class=>'button secondary small' %>
    <% end %>
    <% if @location.twitter_url %>
      <%= link_to @location.twitter_url,'Twitter', :class=>'button secondary small' %>
    <% end %>
    <% if @location.website %>
      <%= link_to @location.website,'Website', :class=>'button secondary small' %>
    <% end %>
    <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
      <strong>Address:</strong>
      <span itemprop="streetAddress"><%= @location.address %></span>
    </div>

    <% if @location.image = nil %>
      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@location.latitude}%2C#{@location.longitude}" %>
    <% end %>

    <%= link_to 'Back', locations_path, :class=>'button secondary small' %>
  </div>
  <div class="large-6 column ">
    <div class="scroller">
      <div class="scroller-container">
        <h3 class="title">Instagram Feed (scroll to view)</h3>
        <% if @location.instagram != nil %>
          <% @instagram.each do |instagram| %>
            <%= image_tag instagram.images.standard_resolution.url %>
          <% end %>
        <% end %>
        <%= link_to 'https://twitter.com/intent/user?screen_name=publicartfound', :target => "_blank" do %>
          <%= image_tag 'https://pbs.twimg.com/profile_images/488723159697211392/C4v8FLrR.png' %>
        <% end %>
      </div>
    </div>
  </div>
</div>





