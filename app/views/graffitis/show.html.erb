<% if @graffiti.images != nil %>
<div class="large-12 hero-image-slice" style="background-image: url('<%= @graffiti.images %>'); ">
  <h1 class="text-center"><%= @graffiti.name %></h1>
</div>
<% end %>

<div class="row">
  <div class="large-6 column">
    <% if @graffiti.location.latitude = nil %>
      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@graffiti.location.latitude}%2C#{@graffiti.location.longitude}" %>
    <% end %>
    <h3>Description</h3>
    <p>
      <%= @graffiti.description %>
    </p>
  </div>
  <div class="large-6 column">
    <h3>Comments</h3>
    <%= render "comments/comments" %>
    <%= render "comments/form" %>
  </div>
</div>


<%#= link_to 'Edit', edit_graffiti_path(@graffiti) %> |
<%= link_to 'Back', graffitis_path %>
