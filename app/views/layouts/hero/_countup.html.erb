<h1 class="text-center hero-white">Over <strong id="count-amount"><%= InstagramArt.count %></strong> pieces</h1>

<script src="/js/countup.js"></script>

<script>
  window.setInterval(function(){
    $.ajax({
      url: "/art_count"
    }).done(function(data) {
      var options = {
        useEasing : true,
        useGrouping : true,
        separator : '',
        decimal : '',
        prefix : '',
        suffix : ''
      }
      window.current_count = parseInt($('#count-amount').html(), 10);
      // console.log('data', data);
      // console.log('current_count', current_count);
      // console.log('current_count == data', data == current_count);
      if(! (data == current_count)){
        var continueCount = new countUp("count-amount", current_count, data, 0, .5, options);
        continueCount.start();
      }
    });
  }, 2000);
</script>
