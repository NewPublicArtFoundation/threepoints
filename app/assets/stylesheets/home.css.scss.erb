.hero-image-slice{
  .hero-white{
    position: relative;
  }
}

h1.intro-hero {
  font-size: 1.4em;
  margin-top: 1em;
}

.home-hero-wrap.hero-image-slice{
  position: relative;
  background: url(image_path('background-blurred.jpg'));
  background-repeat: no-repeat;
  background-size: cover;
  background-position: top;
}

.signup-wrapper{
  padding-top: 20%;
  height: 100%;
}

.hero-explain-box{
  position: relative;
}

.hero-example-text{
  margin-top: 24%;
  text-align: left;
  img{
    margin-bottom: 3%;
    margin-left: -5px;
  }
  h1.hero-white, p{
    color: #222;
  }
  .second{
    font-size: 1.5em;
  }
}

.dragged-graffiti,
.ex-location-map,
.ex-location-pin,
.ex-timeline,
.ex-start,
.ex-end,
.ex-wrapper,
.upload-slot,
h1.hero-white{
  -moz-transition: all 1.5s ease-out;
  -ms-transition: all 1.5s ease-out;
  -webkit-transition: all 1.5s ease-out;
  transition: all 1.5s ease-out;
}

.vert-cent{
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  margin-top: -1em;
  font-size: 2em;
  font-weight: 100;
  margin-top: -.5em;
}

.hero-white{
  color: white;
}

.input-height{
  &.button.small{
    padding-top: 0.67rem;
    height: 37px;
  }
}

.home-hero-wrap{
  .success{
    margin-top: 4em;
  }
  height: 100% !important;
  .hero-container{
    position: absolute;
    left: 0;
    right: 0;
  }
  h1{
    font-size: 3em;
  }
  h2{
    font-size: 1.75em;
    font-weight: 100;
  }
}
