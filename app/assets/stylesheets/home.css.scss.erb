.hero-image-slice{
  .hero-white{
    position: relative;
  }
}

.dragged-graffiti,
.ex-location-map,
.ex-location-pin,
.ex-timeline,
.ex-start,
.ex-end,
.ex-wrapper,
.hero-white{
  opacity: 0;
  -moz-transition: all 1.5s ease-out;
  -ms-transition: all 1.5s ease-out;
  -webkit-transition: all 1.5s ease-out;
  transition: all 1.5s ease-out;
}

.dragged-graffiti{
  // opacity: 1;
  transform: translate(0px, 0);
  position: absolute;
  left: 0;
  right: 0;
  transform: translate(-21000px, 0);
  .appear &{
    opacity: 1;
    transform: translate(0px, 0);
  }
  .appear-loc &{
    opacity: 0;
  }
}

.ex-location-map,
.ex-location-pin,
.ex-timeline{
  position: absolute;
  left: 0;
  right: 0;
}

.vert-cent{
  .appear-loc &{
    opacity: 0;
  }
}

.ex-location-map{
  z-index: 10;
  top: 180px;
  transform: translate(21000px, 0px);
  .appear-map &{
    transform: translate(0px, 0);
    opacity: 1;
  }
  .appear-timeline &{
    opacity: 0;
  }
}

.ex-location-pin{
  z-index: 11;
  top: 270px;
  transform: translate(0px, -300px);
  .appear-loc &{
    transform: translate(0px, 0px);
    opacity: 1;
  }
  .appear-timeline &{
    opacity: 0;
  }
}

.ex-time-wrapper{
  position: relative;
  .appear-timeline &{
    opacity: 1;
  }
  .ex-end{
    right: 0;
    .appear-settime &{
      right: 140px;
    }
  }
  .ex-start{
    left: 0;
    .appear-settime &{
      left: 220px;
    }
  }
  .ex-start,
  .ex-end{
    margin-top: -10px;
    top: 0;
    background: #ddd;
    border-radius: 30px;
    position: absolute;
    height: 30px;
    width: 30px;
    .appear-timeline &{
      opacity: 1;
    }

  }
}

.ex-timeline{
  z-index: 12;
  top: 200px;
  width: 600px;
  height: 10px;
  background: white;
  margin: 0 auto;
  border-radius: 20px;
  .appear-timeline &{
    opacity: 1;
  }
  .appear-final &{
    transform: translate(10000px, 0px);
  }
}

.home-hero-wrap.hero-white{

  h1{
    position: absolute;
    bottom: -2em;
  }
  &.first{
    opacity: 1;
    .appear &{
      opacity: 0;
    }
    .appear-final &{
      opacity: 1;
    }
  }
  &.second{
    opacity: 0;
    .appear &{
      opacity: 1;
    }
    .appear-map &{
      opacity: 0;
    }
  }
  &.third{
    opacity: 0;
    .appear-map &{
      opacity: 1;
    }
    .appear-timeline &{
      opacity: 0;
    }
  }
  &.fourth{
    opacity: 0;
    .appear-timeline &{
      opacity: 1;
    }
    .appear-final &{
      opacity: 0;
    }
  }
}

.border-drag{
  -webkit-transition: all 1s ease-out 2.5s;
  .appear &{
    border: 10px dashed rgba(255,255,255,0);
  }
  border: 10px dashed rgba(255,255,255,1);
  width: 400px;
  height: 300px;
  margin: 110px auto 0px;
  color: white;
  margin-bottom: 5%;
  position: relative;
}

.vert-cent{
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  margin-top: -1em;
  font-size: 2em;
  font-weight: 100;
  margin-top: -.5em;
}

.hero-white{
  color: white;
  font-weight: 200;
}

.input-height{
  &.button.small{
    padding-top: 0.67rem;
    height: 37px;
  }
}

.home-hero-wrap{
  height: 100% !important;
  background: black;
  // background: url('https://farm9.staticflickr.com/8011/7668296070_a30d5df94b_o_d.jpg') black;
  background-size: cover; background-position: 0 0%;
  .hero-container{
    position: absolute;
    left: 0;
    right: 0;
  }
  h1{
    font-size: 3em;
  }
  h2{
    font-size: 1.75em;
    font-weight: 100;
  }
}
